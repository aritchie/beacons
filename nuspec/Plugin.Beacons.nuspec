<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
    <metadata>
        <id>Plugin.Beacons</id>
        <version>1.0.0</version>
        <title>ACR iBeacons Plugin for Xamarin and Windows</title>
        <summary>Ranges and monitors (background) iBeacons</summary>
        <description>
Ranges and background monitors for iBeacons

Supported Platforms
- iOS
- Android
- UWP
- .NET Standard
        </description>
        <authors>Allan Ritchie</authors>
        <owners>Allan Ritchie</owners>
        <iconUrl>https://github.com/aritchie/beacons/icon.png</iconUrl>
        <licenseUrl>https://github.com/aritchie/beacons/LICENSE.md</licenseUrl>
        <projectUrl>https://github.com/aritchie/beacons</projectUrl>
        <requireLicenseAcceptance>false</requireLicenseAcceptance>
        <tags>windows xamarin xam.pcl ble beacons ios android</tags>
        <dependencies>
            <group targetFramework="netstandard2.0">
                <dependency id="System.Reactive" version="[3.1.1, 4)" />
            </group>
            <group targetFramework="Xamarin.iOS10">
                <dependency id="System.Reactive" version="[3.1.1, 4)" />
            </group>
            <group targetFramework="MonoAndroid10">
                <dependency id="Plugin.BluetoothLE" version="[4.0.1, 5)" />
                <dependency id="sqlite-net-pcl" version="[1.4.118, 2)" />
            </group>
            <group targetFramework="uap10.0">
                <dependency id="Plugin.BluetoothLE" version="[4.0.1, 5)" />
                <dependency id="sqlite-net-pcl" version="[1.4.118, 2)" />
            </group>
        </dependencies>
        <releaseNotes>
1.0
Initial Release
        </releaseNotes>
    </metadata>
    <files>
        <!-- netstandard -->
        <file src="..\Plugin.Beacons\bin\Release\netstandard2.0\Acr.iBeacons.*" target="lib\netstandard2.0" />

        <!-- android -->
        <file src="..\Plugin.Beacons.Android\bin\Release\Plugin.Beacons.*" target="lib\MonoAndroid10" />

        <!-- ios -->
        <file src="..\Plugin.Beacons.iOS\bin\Release\Plugin.Beacons.*" target="lib\Xamarin.iOS10" />

        <!-- ios -->
        <file src="..\Plugin.Beacons.Uwp\bin\Release\Plugin.Beacons.*" target="lib\uap10.0" />
    </files>
</package>